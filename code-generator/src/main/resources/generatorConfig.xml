<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="WiseSupport" defaultModelType="conditional" targetRuntime="MyBatis3Simple">

        <plugin type="org.mybatis.generator.plugins.CachePlugin"/>
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/>
        <plugin type="org.mybatis.generator.plugins.MapperAnnotationPlugin"/>
        <plugin type="org.mybatis.generator.plugins.MapperConfigPlugin">
            <property name="targetPackage" value="src/test/resources"/>
            <property name="targetProject" value="./"/>
        </plugin>
        <plugin type="com.wisesupport.cg.mybatis.ValidationXmlPlugin"/>

        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="addRemarkComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="org.h2.Driver"
                        connectionURL="jdbc:h2:tcp://localhost:8043/./ms-web/db/WiseSupport"
                        userId="sa">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.wisesupport.test.mybatis" targetProject="src/test/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="com.wisesupport.test.mybatis" targetProject="src/test/java">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.wisesupport.test.mybatis"
                             targetProject="src/test/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="User">
            <generatedKey column="id" sqlStatement="JDBC"/>
            <domainObjectRenamingRule searchString="^T_" replaceString=""/>
            <columnOverride column="id" isGeneratedAlways="true"/>
        </table>

    </context>

</generatorConfiguration>
